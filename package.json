{
  "name": "coverage-badges",
  "version": "1.0.2",
  "description": "Create coverage badges from different coverage reports",
  "keywords": [
    "coverage",
    "badges"
  ],
  "author": "Julia Bazhukhina",
  "license": "MIT",
  "bin": "index.js",
  "files": [
    "index.js",
    "/src"
  ],
  "homepage": "https://github.com/JulaB/coverage-badges#readme",
  "bugs": "https://github.com/JulaB/coverage-badges/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JulaB/coverage-badges"
  },
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged",
    "test": "$(yarn bin)/jest",
    "premake-badge": "yarn test --coverage",
    "make-badge": "node index.js",
    "postmake-badge": "git add badges/coverage.svg"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/utils/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/utils/",
      "<rootDir>/__tests__/__mocks__/"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "make-badge"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.5",
    "nock": "^10.0.6",
    "pre-commit": "^1.2.2"
  },
  "engines": {
    "node": ">=10"
  }
}
